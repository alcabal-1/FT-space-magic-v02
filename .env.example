# Frontier Tower Intelligence API Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# Environment
ENV=development

# JWT Configuration
JWT_SECRET=frontier-tower-secret-key-change-in-production

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/frontier_tower

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://frontiertower.ai

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_BOT_QUERY=true
ENABLE_REVENUE_OPTIMIZATION=true

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Cache
CACHE_ENABLED=true

# External Services
CALENDAR_API_URL=https://api.frontiertower.ai/calendar
CALENDAR_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090